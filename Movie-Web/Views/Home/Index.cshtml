        <div class="slider-wrapper">
            <h2 class="slider__title">Phim mới nhất</h2>
            <i class="prev fas fa-arrow-left"></i>
            <i class="next fas fa-arrow-right"></i>
            <div class="movie-wrapper">
                @foreach (var itemFilm in ViewBag.listfilmSlide)
                {
                    <div class="card">
                        <div class="card__cover">
                            <img class="card__cover-img"
                                 src="@itemFilm.linkImgAvt"
                                 alt="" />
                            <a href="/DetailFilm/Detail/@itemFilm.filmID" class="card__play">
                                <i class="card__play-icon fas fa-play"></i>
                            </a>
                            <div class="movie_option">
                                <span class="movie_option__text">@itemFilm.quality</span>
                            </div>
                            <div class="runtime">
                                <span class="runtime__text">@itemFilm.releasedEpisodes/@itemFilm.totalEpisodes Tập</span>
                            </div>
                        </div>

                        <div class="card__content--s">
                            <h5 class="card__content-title">
                                <a href="/DetailFilm/Detail/@itemFilm.filmID"
                                   class="card__content-title-link"
                                   title="@itemFilm.nameFilm">@itemFilm.nameFilm</a>
                            </h5>
                            <span class="card__content-title-origin">@itemFilm.nameEngFilm</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

